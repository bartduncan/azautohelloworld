{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0",
  "parameters": {
  },
  "variables": {},
  "resources": [
    {
      "name": "AzureAutomationHelloWorldAccount",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2015-10-31",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {},
      "properties": {
        "comment": "Resource defined structure",
        "sku": {
          "name": "Free"
        }
      },
      "resources": [
        {
          "name": "MyModule",
          "type": "modules",
          "apiVersion": "2015-10-31",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "Microsoft.Automation/automationAccounts/AzureAutomationHelloWorldAccount"
          ],
          "tags": {},
          "properties": {
            "contentLink": {
              "uri": "https://github.com/rchaganti/armseries/raw/master/MyModule.zip"
            }
          }
        }, 
        {
          "type": "runbooks",
          "apiVersion": "2020-01-13-preview",
          "name": "HelloWorldRunbook",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "AzureAutomationHelloWorldAccount"
          ],
          "properties": {
            "runbookType": "PowerShell",
            "logProgress": "false",
            "logVerbose": "false",
            "description": "Hello, world!",
            "publishContentLink": {
              "uri": "https://raw.githubusercontent.com/bartduncan/azautohelloworld/main/HelloWorldRunbook/RunbookContent/entrypoint.ps1",
              "version": "1.0.0.0"
            }
          }
        }
      ]
    }
  ],
  "outputs": {}
}

